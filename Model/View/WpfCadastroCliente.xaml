<UserControl x:Class="View.WpfCadastroCliente"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="300" Margin="-2,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="302"/>
        <Label Content="Cadastro Cliente" HorizontalAlignment="Left" Height="27" Margin="93,37,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold"/>
        <TextBox x:Name="nome_txt" HorizontalAlignment="Left" Height="25" Margin="57,100,0,0" TextWrapping="Wrap" Text="Nome" VerticalAlignment="Top" Width="183"/>
        <TextBox x:Name="cpf_txt" HorizontalAlignment="Left" Height="25" Margin="57,130,0,0" TextWrapping="Wrap" Text="CPF" VerticalAlignment="Top" Width="183"/>
        <Button x:Name="btn_salvar" Content="Salvar" HorizontalAlignment="Left" Height="33" Margin="93,200,0,0" VerticalAlignment="Top" Width="95" Click="btn_salvar_Click"/>

    </Grid>
</UserControl>
